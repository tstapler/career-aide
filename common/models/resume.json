{
  "name": "Resume",
  "base": "PersistedModel",
  "strict": false,
  "idInjection": true,
  "options": {},
  "properties": {
    "username": {
      "type": "string",
      "required": true
    },
    "resumename": {
      "type": "string",
      "required": true
    }
  },
  "validations": [],
  "relations": {},
  "acls": [],
  "methods": {
    "generatePdf": {
      "accepts": [
        {
          "arg": "userId",
          "type": "string",
          "required": true,
          "description": "id of user who owns resume"
        },
        {
          "arg": "theme",
          "type": "string",
          "required": true,
          "description": "theme (choices: 'flat', 'paper', 'classy', 'modern', 'onepage')"
        }
      ],
      "returns": [
        {
          "arg": "pdfOfResume",
          "type": "file",
          "root": true,
          "description": "pdf generated from hackmyresume"
        },
         { "arg": "Content-Type",
           "type": "string",
           "http": { "target": "header" }
         },
         { "arg": "Content-Disposition",
           "type": "string",
           "http": { "target": "header" }
         }
      ],
      "description": "generate pdf resume with hackmyresume",
      "http": [
        {
          "path": "/generatePdf",
          "verb": "get"
        }
      ]
    }
  }
}
